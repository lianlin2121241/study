extends ../layout
block content
	.container
		.row
			.panel.panel-default
				.panel-heading
					h3 #{keyword}
				.panel-body
					if movies&&movies.length>0
						each item in movies
							.col-md-2
								.thumbnail
									a(href="/movie/#{item._id}")
										if item.poster.indexOf("http")!=-1
											img(src="#{item.poster}",alt="#{item.title}",width="149")
										else
											img(src="/updateFile/#{item.poster}",alt="#{item.title}",width="149")
									.caption
										h3= item.title
										p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片
			ul.pagination
				-for(var i=0;i<totalPage;i++){
					-if(i==currentPage){
						li.active
							a(href="/search?#{query}&p=#{currentPage}") #{currentPage+1}
					-}else{
						li
							a(href="/search?#{query}&p=#{i}") #{i+1}
					-}
				-}	
